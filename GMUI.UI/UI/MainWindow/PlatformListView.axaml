<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="200" d:DesignHeight="450"
			 xmlns:vm="using:GMUI.UI.ViewModel"
             x:Class="GMUI.UI.PlatformListView">
	<UserControl.Styles>
		<Style Selector="TextBlock.listItemTitle">
			<Setter Property="FontSize" Value="14"/>
			<Setter Property="FontWeight" Value="Bold"/>
		</Style>
		<Style Selector="TextBlock.listItemDesc">
			<Setter Property="FontSize" Value="12"/>
		</Style>
	</UserControl.Styles>
	<ScrollViewer>
		<ItemsControl Name="ListView">
			<ItemsControl.ItemTemplate>
				<DataTemplate DataType="vm:PlatformViewModel">
					<Border Margin="5,5,5,0" Background="BlanchedAlmond" Padding="10" CornerRadius="10">
						<StackPanel Orientation="Vertical">
							<TextBlock Text="{Binding Name}" Classes="listItemTitle"></TextBlock>
							<TextBlock Text="{Binding Description}" Classes="listItemDesc"></TextBlock>
						</StackPanel>
					</Border>
				</DataTemplate>
			</ItemsControl.ItemTemplate>
		</ItemsControl>
	</ScrollViewer>
</UserControl>
